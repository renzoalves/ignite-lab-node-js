generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Notification {
  id          String    @id // @id=PK
  recipientId String
  content     String
  category    String
  readAt      DateTime? // Inicia como null
  createdAt   DateTime  @default(now()) // Inicial com current_date 

  @@index([recipientId]) // Cria Ã­ndice
}
